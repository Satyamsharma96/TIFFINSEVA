<% if (typeof errorMessage !== 'undefined' && errorMessage && errorMessage.length > 0) { %>
    <div style="background-color: #ffe6e6; border: 1px solid #ff4d4d; border-radius: 0.65rem; padding: 1rem; margin: 1rem auto; margin-bottom: 30px; width: 90%; max-width: 500px; box-shadow: 0 4px 8px rgba(255, 77, 77, 0.2);">
        <ul style="list-style-type: none; padding: 0; margin: 0;">
            <% errorMessage.forEach(error => { %>
                <% if (typeof error === 'string') { %>
                    <li style="color: #ff1a1a; font-size: 0.95rem; font-family: 'Arial', sans-serif; margin-bottom: 0.5rem;"><%= error %></li>
                <% } else if (error && error.msg) { %>
                    <li style="color: #ff1a1a; font-size: 0.95rem; font-family: 'Arial', sans-serif; margin-bottom: 0.5rem;"><%= error.msg %></li>
                <% } %>
            <% }) %>
        </ul>
    </div>
<% } %>
