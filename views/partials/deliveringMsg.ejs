  }

  .input {
    width: 90%;
    padding: 12px 14px;
    border: 1.5px solid #ffcc33;
    border-radius: 8px;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .input:focus {
    border-color: #ffb347;
    box-shadow: 0 0 0 3px rgba(255, 204, 51, 0.25);
