<%- include('../partials/head') %>
<%- include('../partials/background') %>
<%- include('../partials/nav') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<style>
    body {
      background: linear-gradient(135deg, #f8f9fa, #e3f2fd);
      font-family: 'Poppins', sans-serif;
    }

    .referral-card {
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      max-width: 450px;
      width: 100%;
      text-align: center;
      padding: 40px 25px;
      transition: all 0.3s ease;
      margin: 30px auto;
    }

    .referral-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
    }

    .referral-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #333;
      margin-bottom: 15px;
    }

    .referral-message {
      color: #555;
      font-size: 1rem;
      margin-bottom: 25px;
      line-height: 1.6;
    }

    .referral-code-box {
      background: #f1f5ff;
      border: 2px dashed #007bff;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 25px;
      font-size: 1.6rem;
      font-weight: bold;
      letter-spacing: 2px;
      color: #007bff;
      position: relative;
      user-select: all;
    }

    .copy-btn {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 22px;
      border-radius: 30px;
      font-weight: 500;
      transition: 0.3s;
    }

    .copy-btn:hover {
      background: #0056b3;
    }

    .share-btn {
      background: #25d366;
      color: white;
      border: none;
      padding: 10px 22px;
      border-radius: 30px;
      font-weight: 500;
      transition: 0.3s;
      margin-left: 10px;
    }

    .share-btn:hover {
      background: #1da851;
    }

    footer {
      margin-top: 40px;
      color: #777;
      font-size: 0.9rem;
    }

    @media (max-width: 480px) {
      .referral-card {
        padding: 25px 18px;
      }
    }
  </style>

<body>

  <div class="referral-card">
    <h2 class="referral-title">Invite & Earn!</h2>

    <p class="referral-message">
      Share your <strong>Tiffin Seva</strong> referral code with your friends.  
      When they sign up using your code & book their first monthly meal subscription, you will get ‚Çπ100 off on your next monthly meal subscription! üç±üéâ
      You can share this code multiple times and take benefit of it 100x.
    </p>

    <div id="referralCode" class="referral-code-box">
      <%= referralCode %>
    </div>

    <div>
      <button class="copy-btn" id="copyBtn">Copy Code</button>
      <button class="share-btn" id="shareBtn">Share</button>
    </div>
  </div>

  <footer>
    Thank you for spreading happiness with <strong>Tiffin Seva</strong> ‚ù§Ô∏è
  </footer>

  <script>
    document.getElementById("copyBtn").addEventListener("click", () => {
      const code = document.getElementById("referralCode").innerText.trim();
      navigator.clipboard.writeText(code).then(() => {
        alert("Referral code copied to clipboard!");
      });
    });

    document.getElementById("shareBtn").addEventListener("click", () => {
  const code = document.getElementById("referralCode").innerText.trim();
  const message = `Hey! Join Tiffin Seva using my referral code *${code}* and get exciting meals with ‚Çπ100 off on your first monthly meal ‚úåüèª. Sign up here: https://tiffin-seva.com/`;
  const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(message)}`;
  window.open(whatsappUrl, "_blank");
});
  </script>

</body>
</html> 
