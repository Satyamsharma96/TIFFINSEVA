  /* üå∏ Global Styling */
body {
  background: linear-gradient(135deg, #fff8f0 0%, #fce4ec 100%);
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  padding: 0;
}

h1, h2 {
  text-align: center;
  color: #6a1b9a;
  margin-bottom: 20px;
  text-shadow: 2px 2px 5px rgba(0,0,0,0.1);
  animation: bounce 2s infinite;
}

.badaDabba {
  margin-bottom: 15%;
  position: relative;
  padding-top: 40px;
}

/* Decorative Images */
.img1, .img2 {
  position: absolute;
  object-fit: cover;
  z-index: -1;
  opacity: 0.8;
}

.img1 {
  top: 10%;
  left: 3%;
  width: 20vw;
  aspect-ratio: 1/1;
  border-radius: 50% 40% 60% 40% / 40% 50% 50% 60%;
  transition: transform 0.3s ease;
}

.img2 {
  top: 40%;
  right: 3%;
  width: 22vw;
  aspect-ratio: 1/1;
  border-radius: 45% 55% 65% 35% / 50% 30% 70% 60%;
  transition: transform 0.4s ease;
}

.img1:hover, .img2:hover {
  transform: scale(1.05);
}

/* Cards Container */
.cards-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20px;
  gap: 25px;
}

/* Link wrapper */
.card-link {
  text-decoration: none;
  color: inherit;
  display: block;
}

/* Individual Card */
.card {
  display: flex;
  flex-direction: row; /* image left, content right on desktop */
  gap: 20px;
  width: 620px;
  border-radius: 18px;
  background: #f9a4a424;
  box-shadow: 0 10px 25px rgb(0 0 0 / 24%);
  overflow: hidden;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  animation: fadeIn 0.8s ease-in-out;
  cursor: pointer;
}

.card:hover {
  transform: translateY(-12px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

/* Image container */
.card .img-container {
  flex: 0 0 240px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card .img-container img {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  transition: transform 0.4s ease;
}

.card:hover .img-container img {
  transform: scale(1.1);
}

/* Card content */
.card .content {
  flex: 1;
  padding: 18px;
  text-align: left;
}

.card h3 {
  margin: 10px 0;
  color: #8e24aa;
  font-size: 1.4rem;
  font-weight: bold;
}

.card p {
  margin: 6px 0;
  color: #6a1b9a;
  font-size: 0.95rem;
  line-height: 1.4;
}

/* Booked Label */
.card h3.booked {
  position: absolute;
  top: 12px;
  left: 12px;
  color: #ffffff;
  font-weight: bold;
  background-color: #d81b60;
  padding: 5px 15px;
  border-radius: 25px;
  font-size: 0.85rem;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Cancel Button */
.card button {
  background-color: #d81b60;
  color: white;
  border: none;
  padding: 10px 25px;
  border-radius: 30px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-top: 10px;
}

.card button:hover {
  background-color: #ad1457;
  transform: scale(1.05);
}

/* Cancel Notes */
.cancel-note {
  font-weight: 600;
  margin-top: 10px;
}

.cancel-note.allowed {
  color: #388e3c;
}

.cancel-note.not-allowed {
  color: #d32f2f;
}

/* Cancel Button */
.cancel-button {
  padding: 8px 16px;
  border: none;
  border-radius: 5px;
  font-weight: 600;
  color: #fff;
  background-color: #f44336;
  cursor: pointer;
  transition: background-color 0.3s ease, opacity 0.3s ease;
}

.cancel-button:hover {
  background-color: #d32f2f;
}

.cancel-button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
  color: #666;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-5px);
  }
  60% {
    transform: translateY(-3px);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .cards-container {
    flex-direction: column;
    align-items: center;
  }

  .card {
    flex-direction: column; /* stack image & content vertically */
    width: 100%;
  }

  .card .img-container {
    width: 100%;
    margin-bottom: 15px;
  }

  .img1, .img2 {
    display: none;
  }

  h1, h2 {
    font-size: 1.5rem;
  }
}

.problem-form {
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.problem-form label {
  font-weight: 600;
  color: #6a1b9a;
  font-size: 0.95rem;
}

.problem-form textarea {
  resize: none;
  padding: 10px;
  border: 2px solid #f8bbd0;
  border-radius: 8px;
  font-family: inherit;
  font-size: 0.95rem;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.problem-form textarea:focus {
  outline: none;
  border-color: #d81b60;
  box-shadow: 0 0 5px rgba(216, 27, 96, 0.3);
}

.problem-btn {
  align-self: flex-start;
  background-color: #6a1b9a;
  color: #fff;
  padding: 8px 20px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.problem-btn:hover {
  background-color: #4a148c;
  transform: scale(1.05);
}
</style>

