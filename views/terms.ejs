      font-size: 1.5rem;
      font-weight: 700;
    }

    .nav a {
      text-decoration: none;
      color: #444;
      margin-left: 20px;
      font-weight: 600;
      transition: color 0.2s;
    }

    .nav a:hover {
      color: #0b63a5;
    }

    /* Main Content */
    .container {
      width: 90%;
      max-width: 950px;
      margin: 0 auto;
    }

    .main-content {
      padding: 30px 0 50px;
    }

    .terms-card {
      background: #fff;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0 5px 18px rgba(0, 0, 0, 0.06);
    }

    .terms-card h2 {
      color: #0b63a5;
      margin-bottom: 10px;
    }

    .intro {
      color: #444;
      margin-bottom: 20px;
    }

    .terms-section {
      margin-top: 20px;
    }

    .terms-section h3 {
      color: #0b63a5;
      font-size: 1.1rem;
      margin-bottom: 8px;
    }

    .terms-section ul {
      list-style: disc;
      margin-left: 25px;
    }

    .terms-section li {
      margin-bottom: 8px;
    }

    .inner-list {
      list-style: circle;
      margin-left: 40px;
      margin-top: 5px;
    }

    .vendor-section {
      background-color: #f5faff;
      padding: 15px;
      border-left: 4px solid #0b63a5;
      border-radius: 8px;
    }

    /* Contact Section */
    .contact-list {
      margin-left: 25px;
      margin-top: 8px;
    }

    .contact-list a {
      text-decoration: none;
      color: #0b63a5;
      font-weight: 600;
    }

    .contact-list a:hover {
      text-decoration: underline;
    }

    /* Footer inside card */
    .terms-footer {
      margin-top: 25px;
      border-top: 1px dashed #e3e6ee;
      padding-top: 12px;
      color: #666;
      font-size: 0.9rem;
    }

    /* Site Footer */
    .site-footer {
      text-align: center;
      padding: 15px 0;
      background: #ffffff;
      border-top: 1px solid #e6e9ef;
      color: #666;
      font-size: 0.95rem;
    }

    /* Responsive */
    @media (max-width: 650px) {
      .header-inner {
        flex-direction: column;
        align-items: flex-start;
      }

      .nav a {
        margin-left: 0;
        margin-right: 15px;
      }

      .terms-card {
        padding: 18px;
      }
    }
  </style>
</head>

