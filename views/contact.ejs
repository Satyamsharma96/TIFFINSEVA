  <style>
    :root {
      --primary: #0b63a5;
      --accent: #e85a4f;
      --muted: #666;
      --card-bg: #fff3e0;
      --card-hover: #ffe0b2;
      --surface: #ffffff;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
      --radius: 14px;
    }

    /* Reset & base */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0
    }

    html {
      font-family: 'Poppins', system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial;
      line-height: 1.35
    }

    body {
      background: linear-gradient(180deg, #fbfcff 0%, #f7fafc 100%);
      color: #222;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      min-height: 100vh;
      padding: 24px;
    }

    /* Header */
    .header {
      background: var(--surface);
      border-bottom: 1px solid #eef2f6;
      box-shadow: 0 2px 8px rgba(12, 20, 40, 0.03);
      position: sticky;
      top: 0;
      z-index: 20;
    }

    .header-inner {
      max-width: 1100px;
      margin: 0 auto;
      padding: 14px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
    }

    .logo {
      color: var(--primary);
      font-weight: 700;
      font-size: 1.25rem;
      letter-spacing: 0.2px
    }

    .nav {
      display: flex;
      gap: 14px;
      align-items: center;
    }

    .nav a {
      text-decoration: none;
      color: #4b5563;
      padding: 8px 10px;
      border-radius: 8px;
      font-weight: 600;
      transition: all .16s ease;
      font-size: 0.95rem;
    }

    .nav a:hover {
      color: var(--primary);
      background: rgba(11, 99, 165, 0.05);
      transform: translateY(-1px)
    }

    /* Page container */
    .contact-wrapper {
      max-width: 1100px;
      margin: 30px auto;
      padding: 20px;
    }

    .contact-container {
      background: var(--surface);
      padding: 36px;
      border-radius: 18px;
      box-shadow: var(--shadow);
      width: 100%;
      text-align: center;
    }

    .contact-container h1 {
      font-size: clamp(1.4rem, 2.2vw, 2rem);
      color: #111827;
      margin-bottom: 8px;
    }

    .contact-container h1 span {
      color: var(--accent)
    }

    .subtitle {
      color: var(--muted);
      margin-bottom: 22px
    }

    /* Contact grid */
    .contact-box {
      display: grid;
      grid-template-columns: 1fr;
      gap: 18px;
      align-items: stretch;
    }

    .contact-item {
      background: var(--card-bg);
      border-radius: var(--radius);
      padding: 16px;
      display: flex;
      gap: 12px;
      align-items: center;
      transition: transform .18s ease, box-shadow .18s ease, background .18s ease;
      width: 90%;
    }

    .contact-item:hover {
      transform: translateY(-6px);
      background: var(--card-hover);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
    }

    .emoji {
      font-size: 1.9rem;
      width: 46px;
      height: 46px;
      display: inline-grid;
      place-items: center;
      border-radius: 10px;
      background: rgba(0, 0, 0, 0.02);
      flex-shrink: 0;
    }

    .contact-item h3 {
      font-size: 1rem;
      margin-bottom: 4px;
      color: #1f2937
    }

    .contact-item p {
      margin: 0;
      font-weight: 600;
      color: var(--primary)
    }

    .contact-item p a {
      color: inherit;
      text-decoration: none
    }

    .contact-item p a:hover {
      text-decoration: underline
    }

    footer {
      margin-top: 20px;
      color: #6b7280;
      font-size: 0.9rem
    }

    /* Responsive layouts */
    @media (min-width:640px) {
      .contact-container {
        padding: 40px;
        text-align: left
      }

      .contact-box {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px
      }

      .contact-item {
        padding: 18px
      }
    }

    @media (min-width:1000px) {
      .contact-container {
        padding: 48px
      }

      .contact-box {
        grid-template-columns: repeat(3, 1fr)
      }

      .header-inner {
        padding: 18px 12px
      }
    }

    /* Small screens header stacking */
    @media (max-width:480px) {
      .header-inner {
        gap: 8px;
        padding: 12px
      }

      .nav {
        order: 2;
        width: 100%;
        justify-content: space-between;
        padding-top: 8px
      }

      .logo {
        font-size: 1.1rem
      }

      body {
        padding: 14px
      }

      .contact-container {
        padding: 20px
      }
    }
  </style>
</head>

